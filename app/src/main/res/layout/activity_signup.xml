<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/glogo"
                android:id="@+id/logo"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:hint="Name"
                android:layout_below="@+id/logo">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:drawablePadding="12dp"
                    android:padding="8dp"
                    android:hint="Name"
                    android:textColorHint="@drawable/hint"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_person_white_24dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/logo"
                    android:id="@+id/nameInput"
                    />
            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/name"
                android:id="@+id/v1"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coerid"
                android:hint="COER ID"
                android:layout_below="@+id/v1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="COER ID"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:maxLength="10"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:drawableTint="#ffffff"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/v1"
                android:id="@+id/coeridinput"
                />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"
                android:layout_below="@+id/coerid"
                android:layout_marginBottom="4dp"
                android:id="@+id/v2"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:hint="Password"
                android:layout_below="@+id/v2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Password"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:maxLength="8"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v2"
                android:id="@+id/passwordinput"
                />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"
                android:layout_below="@+id/password"
                android:layout_marginBottom="4dp"
                android:id="@+id/v3"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:hint="E-Mail"
                android:layout_below="@+id/v3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="E-Mail"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_action_email"
                android:drawableTint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v3"
                android:id="@+id/emailinput"
                />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"
                android:layout_below="@+id/email"
                android:layout_marginBottom="4dp"
                android:id="@+id/v4"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:hint="Phone"
                android:layout_below="@+id/v4">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Phone"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:maxLength="10"
                android:drawableLeft="@drawable/ic_action_phone"
                android:drawableTint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v4"
                android:id="@+id/phoneinput"
                />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/phone"
                android:id="@+id/v5"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/branch"
                android:hint="Branch"
                android:layout_below="@+id/v5">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Branch"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:drawableTint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v5"
                android:id="@+id/branchinput"
                />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#f9d7db"
                android:layout_below="@+id/branch"
                android:id="@+id/v6"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                android:hint="Year"
                android:layout_below="@+id/v6">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Year"
                android:textColorHint="@drawable/hint"
                android:maxLines="1"
                android:maxLength="1"
                android:drawableLeft="@drawable/ic_adjust_black_24dp"
                android:drawableTint="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v6"
                android:id="@+id/yearinput"
                />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="#f9d7db"
                android:layout_below="@+id/year"
                android:id="@+id/v7"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup"
                android:layout_below="@+id/v7"
                android:background="@drawable/button_style"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="sign up"
                android:elevation="10dp"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowColor="#ffffff"/>



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
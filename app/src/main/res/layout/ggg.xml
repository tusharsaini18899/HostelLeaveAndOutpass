<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actionBar"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/app_name"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.Toolbar>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
                android:layout_below="@id/actionBar"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/dashboard_background"
                android:textAlignment="center"
                android:fontFamily=""
                android:text="DASHBOARD"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="#000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrapeFruit"
                    >
                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_1"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:background="@color/colorGrapeFruitDark"
                        android:text="LEAVE FORM"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorBitterSweet"
                    >
                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="130dp"
                        android:layout_height="80dp"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_time_to_leave_black_24dp"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"

                        android:background="@color/colorBitterSweetDark"
                        android:text="OUTPASS"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrass"
                    >
                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="130dp"
                        android:layout_height="80dp"

                        android:layout_gravity="center"
                        android:src="@drawable/jj"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"

                        android:background="@color/colorGrassDark"
                        android:text="HOSTEL FACILITIES"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorBlueJeans"
                    >
                    <ImageView
                        android:id="@+id/i4"
                        android:layout_width="130dp"
                        android:layout_height="80dp"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_4"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="8dp"

                        android:background="@color/colorBlueJeansDark"
                        android:text="MANAGING FACULTY"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorMint"
                    >
                    <ImageView
                        android:id="@+id/i5"
                        android:layout_width="130dp"
                        android:layout_height="80dp"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_5"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"

                        android:background="@color/colorMintDark"
                        android:text="COMPLAINTS &amp; QUERIES"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:orientation="vertical"
                    android:background="@color/colorAqua"
                    >
                    <ImageView
                        android:id="@+id/i6"
                        android:layout_width="130dp"
                        android:layout_height="80dp"

                        android:layout_gravity="center"
                        android:src="@drawable/ic_icon_6"
                        android:tint="@color/colorWhite"
                        />
                    <Button
                        android:id="@+id/t6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
android:elevation="10dp"
                        android:background="@color/colorAquaDark"
                        android:text="CHECK STATUS"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        />

                </LinearLayout>




            </LinearLayout>
            <!-- End Third Row-->

        </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>